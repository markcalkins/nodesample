//- display a blog 
extends layout

block content
   section.homepage-hero
      img(src='http://placehold.it/1600x200/03B0A3/ffffff&text=project+blogs')

   div.row
      //- left section 
      div.large-9.medium-9.columns
         if blog
            h2.space-top-2 #{blog.title}
               span.space-top-2
            p.blog #{helpers.date.dateFormat(blog.createdOn)} 
               span.lt-space-2 |  
               span.lt-space-2 #{blog.tags}
            
            p !{blog.body}

            //- this line of code is broken -- blows up when going to the last blog
            a(href='/blogs/#{nextBlog.slug}') get next

            br
            br
            br


      //- right section 
      div.large-3.medium-3.columns.hide-for-small-only
         include sidebar

